@{
    ViewData["Title"] = "Home Page";
}


<div class="ui vertical stripe segment" id="add">
    <div class="ui middle aligned grid container">
        <div class="row">
            <h3 class="ui header">Join the Pod</h3>
        </div>
        <div class="equal width row">
            <div class="ui text container left floated column">
                <p>We can give your company superpowers to do things that they never thought possible. Let us delight your customers and empower your needs...through pure data analytics.</p>
            </div>
            <div class="left floated column">
                <div class="ui card">
                    <div class="content">
                        <img class="ui massive avatar image floated right" src="~/images/man_in_glasses.png" />
                        <div class="header">Tyler Hartwig</div>
                        <div class="meta">Dallas</div>
                        <div class="ui move reveal">
                            <div class="visible content">
                                <div class="ui top attached blue label">
                                    Usernames
                                </div>
                                <div class="ui hidden divider"></div>
                                <div class="ui middle aligned list">
                                    <div class="item">
                                        <img class="ui avatar image" src="~/images/steam.png" />
                                        <div class="content">Steam</div>
                                    </div>
                                    <div class="item">
                                        <img class="ui avatar image" src="~/images/psn.jpeg" />
                                        <div class="content">PSN</div>
                                    </div>
                                    <div class="item">
                                        <img class="ui avatar image" src="~/images/xbox.png" />
                                        <div class="content">Xbox Live</div>
                                    </div>
                                </div>
                            </div>
                            <div class="hidden content">
                                <div class="ui vertical segment">
                                    <div class="content">
                                        <div class="ui attached blue label">About Me</div>
                                        <p> <br />test</p>
                                    </div>
                                </div>
                                <div class="ui vertical segment">
                                    <div class="ui attached blue label">Favorite Games</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="center aligned column">
                <a class="ui huge button" id="add-btn">Add Yourself</a>

				<!--Modal starts here-->
				<div class="ui modal" id="modal">
					<div class="ui icon header">
						Fill gaming information
					</div>
					<div class="ui equal width form" style="padding: 1.5em">
						<div class="fields">
							<div class="field">
								<label>Name</label>
								<input type="text" placeholder="Name">
							</div>
							<div class="field">
								<label>Email**</label>
								<input type="email" placeholder="Email">
							</div>
							<div class="field">
								<label>Office</label>
								<input type="email" placeholder="Office">
							</div>
						</div>
						<div class="fields">
							<div class="field">
								<label>PlayStation</label>
								<input type="text" placeholder="Playstation">
							</div>
							<div class="field">
								<label>Xbox</label>
								<input type="text" placeholder="Xbox">
							</div>
							<div class="field">
								<label>Nintendo</label>
								<input type="text" placeholder="Nintendo">
							</div>
						</div>
						<div class="fields">
							<div class="field">
								<label>Steam</label>
								<input type="text" placeholder="Steam">
							</div>
							<div class="field">
								<label>League of Legends</label>
								<input type="text" placeholder="League of Legends">
							</div>
							<div class="field">
								<label>Origin</label>
								<input type="text" placeholder="Origin">
							</div>
						</div>
						<div class="fields">
							<div class="field">
								<label>Discord</label>
								<input type="text" placeholder="Discord">
							</div>
							<div class="field">
								<label>Battle.net</label>
								<input type="text" placeholder="Battle.net">
							</div>
							<div class="field">
								<label>Twitch</label>
								<input type="text" placeholder="Twitch">
							</div>
						</div>
					</div>
					<h5 style="text-align:center">**We promise we will not spam your email :)</h5>
					<div class="actions">
						<div class="ui red basic cancel basic button" id="cancel-btn">
							<i class="remove icon"></i>
							Cancel
						</div>
						<div class="ui green ok inverted button" id="submit-btn">
							<i class="checkmark icon"></i>
							Submit
						</div>
					</div>
				</div>
				<!--Modal ends here-->


            </div>
        </div>
    </div>
</div>

<div class="ui vertical stripe segment" id="about">
    <div class="ui text container">
        <h3 class="ui center aligned header">Meet the Developers</h3><br><br>
    </div>
    <div class="ui three column doubling stackable grid container">
        <div class="column">
            <img class="ui small circular image" src="~/images/profile.jpg">
            <h3 class="ui"> Carlos Cardin </h3>
        </div>
        <div class="column">
            <img class="ui small circular image" src="~/images/profile.jpg">
            <h3 class="ui"> Kristen Barrett </h3>
        </div>
        <div class="column">
            <img class="ui small circular image" src="~/images/profile.jpg">
            <h3 class="ui"> Tyler Hartwig </h3>
        </div>
    </div>
</div>
<script src="~/js/site.js"></script>